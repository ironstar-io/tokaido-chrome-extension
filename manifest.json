{
  "name": "Tokaido Chrome Extension",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "A Chrome extension for Tokaido to check for Varnish cache state",
  "homepage_url": "https://tokaido.io",
  "icons": {
    "16": "icons/icon16_green.png",
    "32": "icons/icon32_green.png",
    "48": "icons/icon48_green.png",
    "128": "icons/icon128_green.png"
  },
  "browser_action": {
    "default_icon": "icons/icon128_grey.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": ["src/bg/background.js"],
    "persistent": true
  },
  "permissions": ["webRequest", "webNavigation", "*://*.local.tokaido.io/"]
}
